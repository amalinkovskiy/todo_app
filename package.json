{
  "name": "simple-todo-app",
  "version": "1.0.0",
  "description": "Simple TODO application with REST API",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test:server": "cross-env NODE_ENV=test PORT=3002 node src/server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "test": "playwright test --workers=1",
    "test:api": "playwright test --project=api --workers=1",
    "test:ui": "playwright test --project=ui-chromium --workers=1",
    "test:mcp": "playwright test --project=mcp-generated --workers=1",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "mcp:start": "node scripts/playwright-mcp-helper.js start-mcp",
    "mcp:create": "node scripts/playwright-mcp-helper.js create-test",
    "mcp:analyze": "node scripts/playwright-mcp-helper.js analyze",
    "mcp:coverage": "node scripts/playwright-mcp-helper.js coverage",
    "mcp:help": "node scripts/playwright-mcp-helper.js help",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "joi": "^18.0.1",
    "lowdb": "^5.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.35",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "todo",
    "api",
    "express"
  ],
  "author": "",
  "license": "MIT"
}
